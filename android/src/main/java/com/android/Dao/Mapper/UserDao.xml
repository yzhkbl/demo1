<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.android.Dao.UserDao" >

    <resultMap id="BaseResultMap" type="com.android.Dao.Entity.User">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="pwd" jdbcType="VARCHAR" property="pwd"/>
        <result column="img" jdbcType="VARCHAR" property="grade"/>
        <result column="user_phone" jdbcType="VARCHAR" property="userPhone"/>
        <result column="identity_id" jdbcType="BIGINT" property="identityId"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, user_name, pwd, grade, user_phone,identity_id
    </sql>
    <select id="find" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user_login
        where user_phone = #{userPhone} and pwd = #{pwd}
    </select>

</mapper>